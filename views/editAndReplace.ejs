<%- include("partials/header"); -%>
<h1 style="text-align:center">Edit and Compose Page</h1>



<% var blogTitle=blogObject.textfield.blogTitle; var blogContent=blogObject.textfield.blogContent; %>

<form action="/posts/<%=blogObject._id%>/edit" method="post">
    <input class="input-title" type="text" name="blogTitle" placeholder="Enter the title of the blog" value= <%= blogTitle %>>
    <br>
    <textarea rows="10" cols="50" class="input-content" name="blogContent" placeholder="Enter the content of the blog"> <%= blogContent %> </textarea><br>
    <button type="submit" class="edit-compose-button">Compose Post</button>
</form>






<%- include("partials/footer"); -%>